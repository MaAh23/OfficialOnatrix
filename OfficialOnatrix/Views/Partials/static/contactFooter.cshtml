@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper
@{
    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents?.FirstOrDefault(x => x.ContentType.Alias == "settingsPage") ?? null;

    var officeLocation = settings?.Value<string>("officeLocation") ?? "";    
    var officePhoneNumber = settings?.Value<string>("officePhoneNumber") ?? "";    
    var officeEmail = settings?.Value<string>("officeEmailAddress") ?? "";    
    var officeImage = settings?.Value<IPublishedContent>("officeImage")?.Url() ?? "";
}

<section class="contact-information ">
    <div class="container">
        <img src="@officeImage" alt="Bild på en man">
        <div class="content">
            <h2>Let us know about your next project</h2>
            <div class="location">
                <p class="bold"><i class="fa-solid fa-location-dot"></i> Office location</p>
                <p>@officeLocation</p>
            </div>
            <div class="phone-number">
                <p class="bold"><i class="fa-solid fa-phone-flip"></i> Phone number</p>
                <p>@officePhoneNumber</p>
            </div>
            <div class="email">
                <p class="bold"><i class="fa-solid fa-envelope"></i> E-mail address</p>
                <p>@officeEmail</p>
            </div>
        </div>
    </div>
</section>