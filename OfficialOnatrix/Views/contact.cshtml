@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Contact>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "masterLayout.cshtml";
	ViewBag.Title = Model?.Value("pageTitle") ?? null; 
}
@if(!string.IsNullOrEmpty(ViewBag.title))
{
	@await Html.PartialAsync("partials/static/breadcrumb.cshtml")
}

@await Html.PartialAsync("partials/static/contactFooter")

<section class="contact-form">
	<div class="container">
		<div class="forms-content">
			<h6>Request a call back</h6>
			<h1>Let us know about your next project</h1>
			<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas consectetur, ligula semper sagittis lobortis, eros metus efficitur purus</p>
		</div>
		<form class="forms">
			<div class="input-group">
				<input id="name" name="name" type="text" placeholder="Name" class="form-input">
			</div>
			<div class="input-group">
				<input id="phone" name="phone" type="text" placeholder="Phone" class="form-input">
			</div>
			<div class="input-group">
				<input id="email" name="email" type="text" placeholder="Email address" class="form-input">
			</div>
				<div class="input-group">
				<input id="address" name="address" type="text" placeholder="Address" class="form-input">
			</div>
		</form>
		<div >
			<a class="btn-primary">Submit</a>
		</div>
	</div>
</section>

@await Html.GetBlockGridHtmlAsync(Model!.Sections)
